{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es5",
    "outDir": "./dist/",

    "lib": [
      "es5",
      "es2015.iterable",
      "dom"
    ],
    "allowJs": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["dom", "es5", "scripthost", "es2015"]
  },
  "include": ["src/*.ts"],
  "exclude": ["./*.js", "node_modules"]
}
